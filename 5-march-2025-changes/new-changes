    <script>
        const text = "Welcome to My Portfol";
        let index = 0;
        function typeEffect() {
            if (index < text.length) {
                document.querySelector(".typing-text").textContent += text.charAt(index);
                index++;
                setTimeout(typeEffect, 100);
            }
        }
        window.onload = typeEffect;
    </script>
